<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_radius_10_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_tittle_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_30dp"
        android:layout_marginTop="@dimen/size_16dp"
        android:gravity="center"
        android:textColor="@color/color_414141"
        android:textSize="@dimen/size_18sp"
        tools:text="盘点步骤"></TextView>

    <EditText
        android:id="@+id/dialog_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_6dp"
        android:minHeight="@dimen/size_40dp"
        android:layout_marginRight="@dimen/size_20dp"
        android:layout_marginLeft="@dimen/size_20dp"
        android:background="@drawable/shape_storke_input_bg"
        android:paddingLeft="@dimen/size_16dp"
        android:paddingRight="@dimen/size_16dp"
        android:textColor="@color/color_414141"
        android:textSize="@dimen/size_14sp"></EditText>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/size_20dp"
        android:background="@color/clr_gray_line"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_promapt_cancle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/size_40dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_919191"
            android:textSize="@dimen/size_20sp"></TextView>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent">
        </View>
        <TextView
            android:id="@+id/dialog_promapt_ack"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/size_40dp"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/main_blue"
            android:textSize="@dimen/size_20sp"></TextView>
    </LinearLayout>

</LinearLayout>
