<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_50dp"
    android:paddingLeft="@dimen/size_16dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/item_group_left_tv"
        android:layout_width="wrap_content"
        android:textSize="@dimen/size_16sp"
        android:gravity="center_vertical"
        android:textColor="@color/color_414141"
        tools:text="事业部"
        android:layout_height="match_parent">
    </TextView>

    <TextView
        android:id="@+id/item_group_right_tv"
        android:layout_width="@dimen/size_24dp"
        android:layout_marginRight="@dimen/size_50dp"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/shape_circle_red"
        android:gravity="center"
        android:textSize="@dimen/size_10sp"
        android:textColor="@color/white"
        tools:text="10"
        android:layout_height="@dimen/size_24dp">

    </TextView>

    <ImageView
        android:layout_width="@dimen/size_20dp"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/size_16dp"
        android:src="@mipmap/arrow_right_gray"
        android:layout_height="@dimen/size_20dp">
    </ImageView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/clr_gray_line">
    </View>
</FrameLayout>
