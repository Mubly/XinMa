<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_50dp"
    android:background="@color/main_blue">

    <ImageView
        android:id="@+id/root_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/size_20dp"
        android:paddingRight="@dimen/size_20dp"
        android:src="@mipmap/back_white"></ImageView>

    <TextView
        android:id="@+id/root_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="16dp"
        tools:text="欣码固定资产"></TextView>

    <TextView
        android:id="@+id/root_right_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/size_30dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:visibility="gone"
        tools:text="保存"></TextView>

    <LinearLayout
        android:id="@+id/top_right_icon_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/print_icon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_50dp"
            android:paddingLeft="@dimen/size_15dp"
            android:paddingTop="@dimen/size_15dp"
            android:paddingRight="@dimen/size_10dp"
            android:paddingBottom="@dimen/size_15dp"
            android:src="@drawable/print_icon"></ImageView>

        <ImageView
            android:id="@+id/setting_icon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_50dp"
            android:paddingLeft="@dimen/size_10dp"
            android:paddingTop="@dimen/size_15dp"
            android:paddingRight="@dimen/size_20dp"
            android:paddingBottom="@dimen/size_15dp"
            android:src="@mipmap/setting_white"></ImageView>
    </LinearLayout>
    <ImageView
        android:id="@+id/right_add"
        android:layout_width="@dimen/size_50dp"
        android:layout_gravity="right"
        android:src="@drawable/ic_icon_add"
        android:padding="@dimen/size_15dp"
        android:visibility="gone"
        android:layout_marginRight="@dimen/size_5dp"
        android:layout_height="@dimen/size_50dp">
    </ImageView>
</FrameLayout>
