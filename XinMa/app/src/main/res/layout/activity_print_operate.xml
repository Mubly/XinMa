<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background"
        tools:context=".activity.PrintOperateActivity">
        <include layout="@layout/top_bar_layout"></include>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/scan_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="扫码添加"
                    android:textColor="@color/main_blue"
                    android:textSize="13sp"></TextView>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_marginBottom="@dimen/size_10dp"
                    android:background="@color/clr_gray_line"></View>

                <TextView
                    android:id="@+id/manual_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="手动添加"
                    android:textColor="@color/main_blue"
                    android:textSize="13sp"></TextView>
            </LinearLayout>
            <androidx.core.widget.NestedScrollView
                android:layout_above="@id/bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/size_40dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/print_operate_mode_img"
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_launcher_background"
                        android:layout_height="wrap_content">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:paddingLeft="@dimen/size_16dp"
                        android:textSize="@dimen/size_12sp"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_919191"
                        android:text="打印机"
                        android:layout_height="@dimen/size_30dp">
                    </TextView>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:layout_height="@dimen/size_50dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/size_16dp"
                            android:text="当前打印机"
                            android:textColor="@color/color_414141"
                            android:textSize="@dimen/size_15sp"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="@dimen/size_40dp"
                            android:textColor="@color/color_919191"
                            android:textSize="@dimen/size_14sp"
                            tools:text="小刘"></TextView>

                        <ImageView
                            android:layout_width="@dimen/size_20dp"
                            android:layout_height="@dimen/size_20dp"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="@dimen/size_16dp"
                            android:padding="@dimen/size_2dp"
                            android:src="@mipmap/arrow_right_gray"></ImageView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="@dimen/size_16dp"
                            android:background="@color/clr_gray_line"></View>
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:paddingLeft="@dimen/size_16dp"
                        android:textSize="@dimen/size_12sp"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_919191"
                        android:text="打印模板"
                        android:layout_height="@dimen/size_30dp">
                    </TextView>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:layout_height="@dimen/size_50dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/size_16dp"
                            android:text="当前模板"
                            android:textColor="@color/color_414141"
                            android:textSize="@dimen/size_15sp"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="@dimen/size_40dp"
                            android:textColor="@color/color_919191"
                            android:textSize="@dimen/size_14sp"
                            tools:text="小刘"></TextView>

                        <ImageView
                            android:layout_width="@dimen/size_20dp"
                            android:layout_height="@dimen/size_20dp"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="@dimen/size_16dp"
                            android:padding="@dimen/size_2dp"
                            android:src="@mipmap/arrow_right_gray"></ImageView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="@dimen/size_16dp"
                            android:background="@color/clr_gray_line"></View>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:paddingLeft="@dimen/size_16dp"
                        android:textSize="@dimen/size_12sp"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_919191"
                        android:text="打印资产"
                        android:layout_height="@dimen/size_30dp">
                    </TextView>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/print_operate_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </RelativeLayout>

    </LinearLayout>
</layout>