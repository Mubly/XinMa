<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">

    <com.mubly.xinma.common.weight.TimeLineView
        android:id="@+id/time_line_view"
        android:layout_width="@dimen/size_30dp"
        android:layout_height="match_parent"
        app:bgColor="@color/main_blue">
    </com.mubly.xinma.common.weight.TimeLineView>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/size_16dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/process_title_label"
            android:textSize="@dimen/size_14sp"
            android:text="[维修]"
            android:textColor="@color/main_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/size_4dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/process_depart_staff_label"
                android:layout_width="wrap_content"
                android:textColor="@color/color_919191"
                android:textSize="@dimen/size_12sp"
                android:text="部门人员"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/process_depart_staff"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/size_16dp"
                android:textColor="@color/color_919191"
                android:textSize="@dimen/size_12sp"
                tools:text="刘晓庆"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/size_4dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/process_create_time_label"
                android:layout_width="wrap_content"
                android:textColor="@color/color_919191"
                android:textSize="@dimen/size_12sp"
                tools:text="部门人员"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/process_create_time"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/size_16dp"
                android:textColor="@color/color_919191"
                android:textSize="@dimen/size_12sp"
                tools:text="刘晓庆"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/size_4dp"
            android:layout_marginBottom="@dimen/size_14dp"
            android:background="@color/clr_gray_line">
        </View>
    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/size_20dp"
        android:src="@mipmap/arrow_right_gray"
        android:padding="@dimen/size_2dp"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/size_30dp"
        android:layout_marginRight="@dimen/size_16dp"
        android:layout_height="@dimen/size_20dp">
    </ImageView>
</FrameLayout>
</LinearLayout>
