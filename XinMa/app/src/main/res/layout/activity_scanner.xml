<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <cn.bingoogolapple.qrcode.zbar.ZBarView
            android:id="@+id/zBarView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:qrcv_animTime="1000"
            app:qrcv_borderColor="@color/color20White"
            app:qrcv_borderSize="2dp"
            app:qrcv_cornerColor="@color/white"
            app:qrcv_cornerLength="32dp"
            app:qrcv_cornerSize="3dp"
            app:qrcv_isAutoZoom="true"
            app:qrcv_isOnlyDecodeScanBoxArea="true"
            app:qrcv_isShowDefaultGridScanLineDrawable="false"
            app:qrcv_isShowDefaultScanLineDrawable="false"
            app:qrcv_isShowTipBackground="true"
            app:qrcv_maskColor="@color/color60Black"
            app:qrcv_rectWidth="315dp"
            app:qrcv_scanLineColor="@color/white"
            app:qrcv_toolbarHeight="@dimen/size_50dp"
            app:qrcv_topOffset="117dp" />

        <include layout="@layout/top_bar_layout"></include>

    </FrameLayout>
</layout>
