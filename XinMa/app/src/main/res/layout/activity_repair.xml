<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="presenter"
            type="com.mubly.xinma.presenter.RepairPresenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.RepairActivity">

        <include layout="@layout/top_bar_layout"></include>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/scan_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="@{()->presenter.scanAdd()}"
                    android:text="扫码添加"
                    android:textColor="@color/main_blue"
                    android:textSize="13sp"></TextView>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_marginBottom="@dimen/size_10dp"
                    android:background="@color/clr_gray_line"></View>

                <TextView
                    android:id="@+id/manual_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="@{()->presenter.manualAdd()}"
                    android:text="手动添加"
                    android:textColor="@color/main_blue"
                    android:textSize="13sp"></TextView>
            </LinearLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/bottom_layout"
                android:background="@color/background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size_30dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/size_16dp">

                        <View
                            android:layout_width="2dp"
                            android:layout_height="@dimen/size_12dp"
                            android:background="@color/main_blue"></View>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_4dp"
                            android:text="基本信息"
                            android:textColor="@color/main_blue"
                            android:textSize="@dimen/size_12dp">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <FrameLayout
                            android:id="@+id/repair_time_layout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_50dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/size_16dp"
                                android:text="送修时间"
                                android:textColor="@color/color_414141"
                                android:textSize="@dimen/size_15sp"></TextView>

                            <TextView
                                android:id="@+id/repair_time_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center_vertical"
                                android:layout_marginRight="@dimen/size_40dp"
                                android:textColor="@color/color_919191"
                                android:textSize="@dimen/size_14sp"
                                android:text="@{presenter.creatDate}"
                                tools:text="2020-0607 24:33"></TextView>

                            <ImageView
                                android:layout_width="@dimen/size_20dp"
                                android:layout_height="@dimen/size_20dp"
                                android:layout_gravity="center_vertical|right"
                                android:layout_marginRight="@dimen/size_16dp"
                                android:padding="@dimen/size_2dp"
                                android:src="@mipmap/arrow_right_gray"></ImageView>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="@dimen/size_16dp"
                                android:background="@color/clr_gray_line"></View>
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/repair_depart_layout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_50dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/size_16dp"
                                    android:text="送修部门"
                                    android:textColor="@color/color_414141"
                                    android:textSize="@dimen/size_15sp"></TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/size_3dp"
                                    android:text="*"
                                    android:textColor="@color/red"
                                    android:visibility="gone"></TextView>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/repair_depart_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center_vertical"
                                android:layout_marginRight="@dimen/size_40dp"
                                android:hint="请选择送修部门与人员"
                                android:gravity="center_vertical|right"
                                android:textColor="@color/color_919191"
                                android:textSize="@dimen/size_14sp"
                                tools:text="小刘"></TextView>

                            <ImageView
                                android:layout_width="@dimen/size_20dp"
                                android:layout_height="@dimen/size_20dp"
                                android:layout_gravity="center_vertical|right"
                                android:layout_marginRight="@dimen/size_16dp"
                                android:padding="@dimen/size_2dp"
                                android:src="@mipmap/arrow_right_gray"></ImageView>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="@dimen/size_16dp"
                                android:background="@color/clr_gray_line"></View>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_50dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/size_16dp"
                                    android:text="送修人"
                                    android:textColor="@color/color_414141"
                                    android:textSize="@dimen/size_15sp"></TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/size_3dp"
                                    android:text="*"
                                    android:textColor="@color/red"
                                    android:visibility="gone"></TextView>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/repair_staff_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center_vertical"
                                android:layout_marginRight="@dimen/size_40dp"
                                android:textColor="@color/color_919191"
                                android:textSize="@dimen/size_14sp"
                                tools:text="小刘"></TextView>

                            <ImageView
                                android:layout_width="@dimen/size_20dp"
                                android:layout_height="@dimen/size_20dp"
                                android:layout_gravity="center_vertical|right"
                                android:layout_marginRight="@dimen/size_16dp"
                                android:padding="@dimen/size_2dp"
                                android:src="@mipmap/arrow_right_gray"></ImageView>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="@dimen/size_16dp"
                                android:background="@color/clr_gray_line"></View>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_50dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/size_16dp"
                                android:text="维修费用"
                                android:textColor="@color/color_414141"
                                android:textSize="@dimen/size_15sp"></TextView>

                            <EditText
                                android:id="@+id/repair_fee_tv"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_gravity="right|center_vertical"
                                android:layout_marginLeft="@dimen/size_100dp"
                                android:layout_marginRight="@dimen/size_40dp"
                                android:background="@null"
                                android:gravity="right|center_vertical"
                                android:hint="请输入维修费用"
                                android:inputType="numberDecimal"
                                android:textColor="@color/color_919191"
                                android:textSize="@dimen/size_14sp"
                                tools:text="小刘"></EditText>

                            <ImageView
                                android:layout_width="@dimen/size_20dp"
                                android:layout_height="@dimen/size_20dp"
                                android:layout_gravity="center_vertical|right"
                                android:layout_marginRight="@dimen/size_16dp"
                                android:padding="@dimen/size_2dp"
                                android:src="@mipmap/arrow_right_gray"></ImageView>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="@dimen/size_16dp"
                                android:background="@color/clr_gray_line"></View>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_50dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/size_16dp"
                                android:text="维修地点"
                                android:textColor="@color/color_414141"
                                android:textSize="@dimen/size_15sp"></TextView>

                            <EditText
                                android:id="@+id/repair_address_tv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical|right"
                                android:background="@null"
                                android:hint="请输入维修地点"
                                android:layout_marginLeft="@dimen/size_100dp"
                                android:layout_gravity="right|center_vertical"
                                android:layout_marginRight="@dimen/size_40dp"
                                android:textColor="@color/color_919191"
                                android:textSize="@dimen/size_14sp"
                                tools:text="小刘"></EditText>

                            <ImageView
                                android:layout_width="@dimen/size_20dp"
                                android:layout_height="@dimen/size_20dp"
                                android:layout_gravity="center_vertical|right"
                                android:layout_marginRight="@dimen/size_16dp"
                                android:padding="@dimen/size_2dp"
                                android:src="@mipmap/arrow_right_gray"></ImageView>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="@dimen/size_16dp"
                                android:background="@color/clr_gray_line"></View>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_50dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/size_16dp"
                                android:text="维修原因"
                                android:textColor="@color/color_414141"
                                android:textSize="@dimen/size_15sp"></TextView>

                            <EditText
                                android:id="@+id/repair_reason_et"
                                android:layout_width="match_parent"
                                android:gravity="right|center_vertical"
                                android:background="@null"
                                android:layout_marginLeft="@dimen/size_100dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="right|center_vertical"
                                android:layout_marginRight="@dimen/size_40dp"
                                android:textColor="@color/color_919191"
                                android:textSize="@dimen/size_14sp"
                                android:hint="请输入维修原因"
                                tools:text="155876839755"></EditText>

                            <ImageView
                                android:layout_width="@dimen/size_20dp"
                                android:layout_height="@dimen/size_20dp"
                                android:layout_gravity="center_vertical|right"
                                android:layout_marginRight="@dimen/size_16dp"
                                android:padding="@dimen/size_2dp"
                                android:src="@mipmap/arrow_right_gray"></ImageView>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_gravity="bottom"
                                android:background="@color/clr_gray_line"></View>
                        </FrameLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_16dp"
                        android:layout_marginTop="@dimen/size_20dp"
                        android:layout_marginBottom="@dimen/size_20dp"
                        android:text="请添加要维修的资产"
                        android:textColor="@color/color_919191"
                        android:textSize="@dimen/size_12sp"></TextView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/repair_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </RelativeLayout>

    </LinearLayout>
</layout>