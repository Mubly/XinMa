<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/filter_layout"
    android:background="@color/transBlck"
    android:visibility="gone"
    tools:visibility="visible">

    <LinearLayout
        android:layout_width="0dp"
        android:id="@+id/filter_content_layout"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.7">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_40dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size_16dp">

            <View
                android:layout_width="@dimen/size_2dp"
                android:layout_height="@dimen/size_15dp"
                android:background="@color/main_blue"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_12dp"
                android:text="使用信息"
                android:textColor="@color/main_blue"
                android:textSize="13sp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/size_16dp"
                    android:text="所属部门"
                    android:textColor="@color/color_414141"
                    android:textSize="@dimen/size_15sp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/size_40dp"
                    android:textColor="@color/color_919191"
                    android:textSize="@dimen/size_14sp"
                    tools:text=""></TextView>

                <ImageView
                    android:layout_width="@dimen/size_20dp"
                    android:layout_height="@dimen/size_20dp"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/size_16dp"
                    android:padding="@dimen/size_2dp"
                    android:src="@mipmap/arrow_right_gray"></ImageView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/size_16dp"
                    android:background="@color/clr_gray_line"></View>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/size_16dp"
                    android:text="资产分类"
                    android:textColor="@color/color_414141"
                    android:textSize="@dimen/size_15sp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/size_40dp"
                    android:textColor="@color/color_919191"
                    android:textSize="@dimen/size_14sp"
                    tools:text=""></TextView>

                <ImageView
                    android:layout_width="@dimen/size_20dp"
                    android:layout_height="@dimen/size_20dp"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/size_16dp"
                    android:padding="@dimen/size_2dp"
                    android:src="@mipmap/arrow_right_gray"></ImageView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="@color/clr_gray_line"></View>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_40dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size_16dp">

            <View
                android:layout_width="@dimen/size_2dp"
                android:layout_height="@dimen/size_15dp"
                android:background="@color/main_blue"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_12dp"
                android:text="购置日期"
                android:textColor="@color/main_blue"
                android:textSize="13sp">

            </TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/size_16dp"
                    android:text="开始日期"
                    android:textColor="@color/color_414141"
                    android:textSize="@dimen/size_15sp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/size_40dp"
                    android:textColor="@color/color_919191"
                    android:textSize="@dimen/size_14sp"
                    tools:text=""></TextView>

                <ImageView
                    android:layout_width="@dimen/size_20dp"
                    android:layout_height="@dimen/size_20dp"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/size_16dp"
                    android:padding="@dimen/size_2dp"
                    android:src="@mipmap/arrow_right_gray"></ImageView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="@color/clr_gray_line"></View>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="top"
                    android:background="@color/clr_gray_line"></View>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/size_16dp"
                    android:text="结束日期"
                    android:textColor="@color/color_414141"
                    android:textSize="@dimen/size_15sp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/size_40dp"
                    android:textColor="@color/color_919191"
                    android:textSize="@dimen/size_14sp"
                    tools:text=""></TextView>

                <ImageView
                    android:layout_width="@dimen/size_20dp"
                    android:layout_height="@dimen/size_20dp"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/size_16dp"
                    android:padding="@dimen/size_2dp"
                    android:src="@mipmap/arrow_right_gray"></ImageView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/size_16dp"
                    android:background="@color/clr_gray_line"></View>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/size_16dp"
                    android:text="到期日期"
                    android:textColor="@color/color_414141"
                    android:textSize="@dimen/size_15sp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/size_40dp"
                    android:textColor="@color/color_919191"
                    android:textSize="@dimen/size_14sp"
                    tools:text=""></TextView>

                <ImageView
                    android:layout_width="@dimen/size_20dp"
                    android:layout_height="@dimen/size_20dp"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/size_16dp"
                    android:padding="@dimen/size_2dp"
                    android:src="@mipmap/arrow_right_gray"></ImageView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/size_16dp"
                    android:background="@color/clr_gray_line"></View>
            </FrameLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_height="@dimen/size_40dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/gray"
                    android:gravity="center"
                    android:text="重置筛选"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_12sp"></TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/main_blue"
                    android:gravity="center"
                    android:text="确认筛选"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_12sp"></TextView>
            </LinearLayout>
        </FrameLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
