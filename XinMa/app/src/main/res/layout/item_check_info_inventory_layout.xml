<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_70dp">

    <ImageView
        android:id="@+id/item_check_inventory_img"
        android:layout_width="@dimen/size_60dp"
        android:layout_height="@dimen/size_60dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/size_16dp"
        tools:src="@mipmap/ic_launcher"></ImageView>

    <TextView
        android:id="@+id/item_check_inventory_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_80dp"
        android:layout_marginTop="@dimen/size_8dp"
        android:textColor="@color/color_414141"
        android:textSize="@dimen/size_14sp"
        tools:text="苹果"></TextView>

    <TextView
        android:id="@+id/item_check_inventory_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/size_80dp"
        android:layout_marginBottom="@dimen/size_8dp"
        android:textColor="@color/color_919191"
        android:textSize="@dimen/size_12sp"
        tools:text="食品">

    </TextView>
    <ImageView
        android:id="@+id/item_check_inventory_type_img"
        android:layout_width="@dimen/size_60dp"
        android:src="@drawable/ldle_icon_bg"
        android:layout_gravity="right"
        android:layout_height="@dimen/size_60dp">
    </ImageView>
    <View
        android:layout_width="match_parent"
        android:background="@color/clr_gray_line"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/size_16dp"
        android:layout_height="1px">
    </View>
</FrameLayout>
