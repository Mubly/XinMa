<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_70dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_check_inventory_img"
        android:layout_width="@dimen/size_60dp"
        android:layout_height="@dimen/size_60dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/size_16dp"
        tools:src="@mipmap/ic_launcher"></ImageView>

    <TextView
        android:id="@+id/item_check_inventory_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_80dp"
        android:layout_marginTop="@dimen/size_8dp"
        android:textColor="@color/color_414141"
        android:textSize="@dimen/size_14sp"
        tools:text="苹果"></TextView>

    <TextView
        android:id="@+id/item_check_inventory_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/size_80dp"
        android:layout_marginBottom="@dimen/size_8dp"
        android:textColor="@color/color_919191"
        android:textSize="@dimen/size_12sp"
        tools:text="食品">

    </TextView>
<FrameLayout
    android:layout_width="wrap_content"
    android:layout_gravity="right"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/item_check_inventory_type_img"
        android:layout_width="@dimen/size_60dp"
        android:layout_height="@dimen/size_60dp"
        app:srcCompat="@drawable/ic_ldle_icon_bg"></ImageView>
    <com.mubly.xinma.common.weight.RotateTextView
        android:id="@+id/status_name"
        android:layout_width="@dimen/size_40dp"
        tools:text="闲置"
        android:gravity="center"
        android:layout_gravity="right"
        android:textSize="@dimen/size_10sp"
        android:textColor="@color/white"
        android:layout_height="@dimen/size_40dp">
    </com.mubly.xinma.common.weight.RotateTextView>
</FrameLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/size_16dp"
        android:background="@color/clr_gray_line"></View>
</FrameLayout>
