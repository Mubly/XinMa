<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_radius_10_white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/input_one_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20dp"
        android:textSize="@dimen/size_16sp"
        tools:text="标题"></TextView>

    <EditText
        android:id="@+id/input_one_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp"
        android:layout_marginLeft="@dimen/size_20dp"
        android:layout_marginTop="@dimen/size_20dp"
        android:layout_marginRight="@dimen/size_20dp"
        android:background="@drawable/shape_storke_input_bg"
        android:textSize="@dimen/size_14sp"></EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp"
        android:layout_marginTop="@dimen/size_30dp">

        <TextView
            android:id="@+id/input_one_cancle"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_919191"
            android:textSize="@dimen/size_14sp"></TextView>

        <View
            android:layout_width="@dimen/size_1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_marginBottom="@dimen/size_10dp">

        </View>

        <TextView
            android:id="@+id/input_one_ack"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_919191"
            android:textSize="@dimen/size_14sp"></TextView>
    </LinearLayout>
</LinearLayout>
