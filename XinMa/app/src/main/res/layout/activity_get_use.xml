<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.GetUseActivity">
        <include layout="@layout/top_bar_layout"></include>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:background="@color/background"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:paddingLeft="@dimen/size_16dp"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/size_30dp">
                    <View
                        android:layout_width="2dp"
                        android:background="@color/main_blue"
                        android:layout_height="@dimen/size_12dp">
                    </View>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="@dimen/size_4dp"
                        android:textSize="@dimen/size_12dp"
                        android:textColor="@color/main_blue"
                        android:text="基本信息"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_50dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/size_15sp"
                            android:textColor="@color/color_414141"
                            android:text="领用时间"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/size_16dp"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:textColor="@color/color_919191"
                            android:textSize="@dimen/size_14sp"
                            android:layout_width="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            tools:text="2020-0607 24:33"
                            android:layout_marginRight="@dimen/size_40dp"
                            android:layout_height="wrap_content">
                        </TextView>
                        <ImageView
                            android:layout_width="@dimen/size_20dp"
                            android:src="@mipmap/arrow_right_gray"
                            android:padding="@dimen/size_2dp"
                            android:layout_marginRight="@dimen/size_16dp"
                            android:layout_gravity="center_vertical|right"
                            android:layout_height="@dimen/size_20dp">
                        </ImageView>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="@dimen/size_16dp"
                            android:background="@color/clr_gray_line">
                        </View>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_50dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textSize="@dimen/size_15sp"
                                android:textColor="@color/color_414141"
                                android:text="领用部门"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/size_16dp"
                                android:layout_height="wrap_content">
                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="*"
                                android:layout_marginLeft="@dimen/size_3dp"
                                android:textColor="@color/red"
                                android:layout_height="wrap_content">
                            </TextView>
                        </LinearLayout>
                        <TextView
                            android:textColor="@color/color_919191"
                            android:textSize="@dimen/size_14sp"
                            android:layout_width="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            tools:text="小刘"
                            android:layout_marginRight="@dimen/size_40dp"
                            android:layout_height="wrap_content">
                        </TextView>
                        <ImageView
                            android:layout_width="@dimen/size_20dp"
                            android:src="@mipmap/arrow_right_gray"
                            android:padding="@dimen/size_2dp"
                            android:layout_marginRight="@dimen/size_16dp"
                            android:layout_gravity="center_vertical|right"
                            android:layout_height="@dimen/size_20dp">
                        </ImageView>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="@dimen/size_16dp"
                            android:background="@color/clr_gray_line">
                        </View>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_50dp">
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content">
                           <TextView
                               android:layout_width="wrap_content"
                               android:textSize="@dimen/size_15sp"
                               android:textColor="@color/color_414141"
                               android:text="领用人"
                               android:layout_gravity="center_vertical"
                               android:layout_marginLeft="@dimen/size_16dp"
                               android:layout_height="wrap_content">
                           </TextView>
                           <TextView
                               android:layout_width="wrap_content"
                               android:text="*"
                               android:layout_marginLeft="@dimen/size_3dp"
                               android:textColor="@color/red"
                               android:layout_height="wrap_content">
                           </TextView>
                       </LinearLayout>

                        <TextView
                            android:textColor="@color/color_919191"
                            android:textSize="@dimen/size_14sp"
                            android:layout_width="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            tools:text="小刘"
                            android:layout_marginRight="@dimen/size_40dp"
                            android:layout_height="wrap_content">
                        </TextView>
                        <ImageView
                            android:layout_width="@dimen/size_20dp"
                            android:src="@mipmap/arrow_right_gray"
                            android:padding="@dimen/size_2dp"
                            android:layout_marginRight="@dimen/size_16dp"
                            android:layout_gravity="center_vertical|right"
                            android:layout_height="@dimen/size_20dp">
                        </ImageView>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="@dimen/size_16dp"
                            android:background="@color/clr_gray_line">
                        </View>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_50dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/size_15sp"
                            android:textColor="@color/color_414141"
                            android:text="领用存放地"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/size_16dp"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:textColor="@color/color_919191"
                            android:textSize="@dimen/size_14sp"
                            android:layout_width="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            tools:text="小刘"
                            android:layout_marginRight="@dimen/size_40dp"
                            android:layout_height="wrap_content">
                        </TextView>
                        <ImageView
                            android:layout_width="@dimen/size_20dp"
                            android:src="@mipmap/arrow_right_gray"
                            android:padding="@dimen/size_2dp"
                            android:layout_marginRight="@dimen/size_16dp"
                            android:layout_gravity="center_vertical|right"
                            android:layout_height="@dimen/size_20dp">
                        </ImageView>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="@dimen/size_16dp"
                            android:background="@color/clr_gray_line">
                        </View>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_50dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/size_15sp"
                            android:textColor="@color/color_414141"
                            android:text="领用原因"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/size_16dp"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:textColor="@color/color_919191"
                            android:textSize="@dimen/size_14sp"
                            android:layout_width="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            tools:text="155876839755"
                            android:layout_marginRight="@dimen/size_40dp"
                            android:layout_height="wrap_content">
                        </TextView>
                        <ImageView
                            android:layout_width="@dimen/size_20dp"
                            android:src="@mipmap/arrow_right_gray"
                            android:padding="@dimen/size_2dp"
                            android:layout_marginRight="@dimen/size_16dp"
                            android:layout_gravity="center_vertical|right"
                            android:layout_height="@dimen/size_20dp">
                        </ImageView>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="bottom"
                            android:background="@color/clr_gray_line">
                        </View>
                    </FrameLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_919191"
                    android:textSize="@dimen/size_12sp"
                    android:text="请添加领用资产"
                    android:layout_marginBottom="@dimen/size_20dp"
                    android:layout_marginLeft="@dimen/size_16dp"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:layout_height="wrap_content">
                </TextView>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>