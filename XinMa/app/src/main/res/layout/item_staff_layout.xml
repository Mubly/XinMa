<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="@dimen/size_40dp">

    <TextView
        android:id="@+id/item_staff_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/size_16dp"
        android:textColor="@color/color_414141"
        android:textSize="@dimen/size_14sp"
        tools:text="青奥"></TextView>

    <ImageView
        android:layout_width="@dimen/size_20dp"
        android:layout_height="@dimen/size_20dp"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/size_20dp"
        android:src="@mipmap/arrow_right_gray"></ImageView>

    <View
        android:id="@+id/item_staff_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/size_16dp"
        android:background="@color/clr_gray_line">
    </View>
</FrameLayout>
